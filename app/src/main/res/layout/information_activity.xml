<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.FishAI.AppBarOverlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.FishAI.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:id="@+id/result_image"
        android:layout_width="219dp"
        android:layout_height="118dp"
        android:layout_marginStart="141dp"
        android:layout_marginTop="71dp"
        android:layout_marginEnd="142dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fish_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:letterSpacing="0.01"
        android:text="fishName"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result_image"
        tools:visibility="visible" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="5dp"
        android:stretchColumns="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fish_name_text">

        <TableRow>

            <TextView
                android:layout_width="140dp"
                android:layout_column="0"
                android:layout_marginLeft="10dip"
                android:gravity="end"
                android:letterSpacing="0.01"
                android:padding="6dip"
                android:text="Bag Limit: "
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bag_limit"
                android:layout_width="0dp"
                android:layout_column="1"
                android:layout_marginEnd="10dip"
                android:gravity="center|fill_horizontal"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="6sp"
                android:padding="6dip"
                android:text=""
                android:textColor="@color/white" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="140dp"
                android:layout_column="0"
                android:layout_marginStart="10dip"
                android:gravity="end"
                android:letterSpacing="0.01"
                android:padding="6dip"
                android:text="Possession Limit: "
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/possession_limit"
                android:layout_width="0dp"
                android:layout_column="1"
                android:layout_marginEnd="10dip"
                android:gravity="center|fill_horizontal"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="6sp"
                android:padding="6dip"
                android:text=""
                android:textColor="@color/white" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="140dp"
                android:layout_column="0"
                android:layout_marginStart="10dip"
                android:gravity="end"
                android:letterSpacing="0.01"
                android:padding="6dip"
                android:text="Minimum Size: "
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/minimum_size"
                android:layout_width="0dp"
                android:layout_column="1"
                android:layout_marginEnd="10dip"
                android:gravity="center|fill_horizontal"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="6sp"
                android:padding="6dip"
                android:text=""
                android:textColor="@color/white" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="140dp"

                android:layout_column="0"
                android:layout_marginStart="10dip"
                android:gravity="end"
                android:letterSpacing="0.01"
                android:padding="6dip"
                android:text="Season: "
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/season"
                android:layout_width="0dp"
                android:layout_column="1"
                android:layout_marginEnd="10dip"
                android:gravity="center|fill_horizontal"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="6sp"
                android:padding="6dip"
                android:text=""
                android:textColor="@color/white" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="140dp"
                android:layout_column="0"
                android:layout_marginStart="10dip"
                android:gravity="end"
                android:letterSpacing="0.01"
                android:padding="6dip"
                android:text="Freshwater? "
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/freshwater"
                android:layout_width="0dp"
                android:layout_column="1"
                android:layout_marginEnd="10dip"
                android:gravity="center|fill_horizontal"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="6sp"
                android:padding="6dip"
                android:text=""
                android:textColor="@color/white" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="140dp"
                android:layout_column="0"
                android:layout_marginStart="10dip"
                android:gravity="end"
                android:letterSpacing="0.01"
                android:padding="6dip"
                android:text="Saltwater? "
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/saltwater"
                android:layout_width="0dp"
                android:layout_column="1"
                android:layout_marginEnd="10dip"
                android:gravity="center|fill_horizontal"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="6sp"
                android:padding="6dip"
                android:text=""
                android:textColor="@color/white" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="140dp"
                android:layout_column="0"
                android:layout_marginStart="10dip"
                android:gravity="end"
                android:letterSpacing="0.01"
                android:padding="6dip"
                android:text="Notes: "
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/note"
                android:layout_width="0dp"
                android:layout_column="1"
                android:layout_marginEnd="10dip"
                android:gravity="center|fill_horizontal"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="6sp"
                android:padding="6dip"
                android:text=""
                android:textColor="@color/white" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/info_measure_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:enabled="true"
        android:lineSpacingExtra="6dp"
        android:text="Measure Fish"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout"
        app:strokeColor="#C9F4EB"
        app:strokeWidth="1dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/info_background"
        android:elevation="-1dp"/>

    <!--
        <TextView
            android:id="@+id/debug_text"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="256dp"
            android:layout_marginEnd="100dp"
            android:elevation="5dp"
            android:text="DEBUG TEXT"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fish_name_text" />
    -->
</androidx.constraintlayout.widget.ConstraintLayout>